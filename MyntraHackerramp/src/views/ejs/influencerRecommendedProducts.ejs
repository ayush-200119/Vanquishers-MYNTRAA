<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/static/css/card.css">

<div>
    <div class="text-banner-container">
      <h4 class="text-banner-title"><%=name %>'s Recommended Products</h4>
    </div>
    <div style="margin: 60px auto 30px;display: flex; align-items: center; justify-content: center; flex-direction: column;" >
    <% for(let i=0;i<Math.floor(recommendedProducts.length/4);i++){ %>
     <div class="row" style="margin-top: 15px;margin-bottom: 15px;">
      <%for(let j=i*4;j<(4*i)+4;j++){ %>
        <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12" style="text-align: center; margin-top:15px; margin-bottom:15px;">
          <div class="card"  onclick="location.href='/<%=recommendedProducts[j].productName%>';" style="cursor: pointer;width: 16rem;">
        
            <img style="border-radius: 15px; max-height: 230px; object-fit: cover;" src=<%= recommendedProducts[j].images %> class="card-img-top" alt="...">
     
            <div class="card-body">
              <h5 class="card-title"><%= recommendedProducts[j].brandName %></h5>
              <p class="card-text"><%= recommendedProducts[j].productName %></p>
              <p class="card-text"><span style="font-weight: bold;">Rs <%= recommendedProducts[j].price %></span><span style="font-weight: lighter !important; text-decoration: line-through;margin-left: 5px;margin-right: 5px; color:rgba(94, 93, 79, 0.445)">Rs <%=((recommendedProducts[j].price * 100)/(100-recommendedProducts[j].discount)).toFixed(2) %></span><span style="font-weight: lighter !important; color:#f53edc">(<%= recommendedProducts[j].discount %>% Off)</span></p>
              
              <div class="product-info">
                <div class="like-container">
                <div class='large-font text-center top-20'>
                  <ion-icon name="heart">
                    <div class='red-bg'></div>
                  </ion-icon>
                </div>

                <span><%= recommendedProducts[j].Likes %></span>
              </div>
                
                <div class="recommendedBy">
                  <p class="rm-bottom">Recommended</p>
                  <p><strong>By <%= recommendedProducts[j].recommendedBy.length %></strong> </p>
                </div>

              
              </div>
              <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <% } %>

    <div class="row" style="margin-top: 15px;margin-bottom: 15px;">
      <%for(let j=(Math.floor(recommendedProducts.length/4))*4;j<recommendedProducts.length;j++){ %>
        <div class="col-md-<%=12/(recommendedProducts.length-((Math.floor(recommendedProducts.length/4))*4)) %> " style="text-align: center; margin-top:15px; margin-bottom:15px;">
          <div class="card"  onclick="location.href='/<%=recommendedProducts[j].productName%>';" style="cursor: pointer;width: 16rem;">
        
            <img style="border-radius: 15px; max-height: 230px; object-fit: cover;" src=<%= recommendedProducts[j].images %> class="card-img-top" alt="...">
     
            <div class="card-body">
              <h5 class="card-title"><%= recommendedProducts[j].brandName %></h5>
              <p class="card-text"><%= recommendedProducts[j].productName %></p>
              <p class="card-text"><span style="font-weight: bold;">Rs <%= recommendedProducts[j].price %></span><span style="font-weight: lighter !important; text-decoration: line-through;margin-left: 5px;margin-right: 5px; color:rgba(94, 93, 79, 0.445)">Rs <%=((recommendedProducts[j].price * 100)/(100-recommendedProducts[j].discount)).toFixed(2) %></span><span style="font-weight: lighter !important; color:#f53edc">(<%= recommendedProducts[j].discount %>% Off)</span></p>
              
              <div class="product-info">
                <div class="like-container">
                <div class='large-font text-center top-20'>
                  <ion-icon name="heart">
                    <div class='red-bg'></div>
                  </ion-icon>
                </div>

                <span><%= recommendedProducts[j].Likes %></span>
              </div>
                
                <div class="recommendedBy">
                  <p class="rm-bottom">Recommended</p>
                  <p><strong>By <%= recommendedProducts[j].recommendedBy.length %></strong> </p>
                </div>

              
              </div>

              <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
            </div>
          </div>
        </div>
      <% } %>
      </div>

  </div>   
</div> 


