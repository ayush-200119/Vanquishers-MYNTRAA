<div>
    <div class="text-banner-container">
      <h4 class="text-banner-title">Most Loved Products By Influencers</h4>
    </div>
    <div style="margin: 60px auto 30px;display: flex; align-items: center; justify-content: center; flex-direction: column;" >
    <% for(let i=0;i<16;i+=4){ %>
     <div class="row" style="margin-top: 15px;margin-bottom: 15px;">
      <%for(let j=i;j<productDataArray.length && j < i+4 ; j++){ %>
        <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12" style="text-align: center; margin-top:15px; margin-bottom:15px;">
          <div class="card"  onclick="location.href='/<%=productDataArray[j].productName%>';" style="cursor: pointer;width: 16rem;">
        
            <img style="border-radius: 15px; max-height: 230px; object-fit: cover;" src=<%= productDataArray[j].images %> class="card-img-top" alt="...">
     
            <div class="card-body">
              <h5 class="card-title"><%= productDataArray[j].brandName %></h5>
              <p class="card-text"><%= productDataArray[j].productName %></p>
              <p class="card-text"><span style="font-weight: bold;">Rs <%= productDataArray[j].price %></span><span style="font-weight: lighter !important; text-decoration: line-through;margin-left: 5px;margin-right: 5px; color:rgba(94, 93, 79, 0.445)">Rs <%=((productDataArray[j].price * 100)/(100-productDataArray[j].discount)).toFixed(2) %></span><span style="font-weight: lighter !important; color:#f53edc">(<%= productDataArray[j].discount %>% Off)</span></p>
              <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <% } %>
  </div>   
</div> 

