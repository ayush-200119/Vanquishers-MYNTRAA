<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/static/css/card.css">

<div>
        <div class="text-banner-container">
          <h4 class="text-banner-title">Top- 5 Influencers</h4>
        </div>
        <div style="margin: 60px auto 30px;display: flex; align-items: center; justify-content: center; flex-direction: column;" >
        <% for(let i=0;i<5;i+=4){ %>
         <div class="row" style="margin-top: 15px;margin-bottom: 15px;">
          <%for(let j=i;j<5 && j<i+4;j++){ %>
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12" style="text-align: center; margin-top:15px; margin-bottom:15px;">
              <div class="card" style="width: 15rem;" >
            
                <img style="border-radius: 15px;max-height: 300px; object-fit: cover;" src=<%= influencerDataArray[j].image %> class="card-img-top" alt="...">
         
                <div class="card-body">
                  <h5 class="card-title"><%= influencerDataArray[j].name %></h5>
                  <!-- <p class="card-text"><%= influencerDataArray[j].productName %></p> -->
                  <p class="card-text"><span style="font-weight: bold;">Followers: <%= influencerDataArray[j].followers %></span></p>
                  <div onclick="location.href='/top5influencers/<%=influencerDataArray[i].name%>';" style="cursor: pointer;">
                    <p class="card-text"> Recommended Products</p>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>
        <% } %>
      </div>   
    </div> 

