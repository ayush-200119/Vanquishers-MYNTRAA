<%- include("navbar.ejs") -%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/static/css/product.css">

<div class="grandparent-div">
<div class="row parent-div">
    <div class="col-md-6 image-div">
        <img src="<%=product.images %>" alt="product" class="image">
    </div>
    <div class="col-md-6 product-about">
        <div class="product-title-div">
            <h1> <%=product.productName %> </h1>
            <p> <%=product.brandName %> </p>
        </div>
        <hr>
        <div class="product-details">
            <p class="card-text"><span style="font-weight: bold;">Rs <%= product.price %></span><span style="font-weight: lighter !important; text-decoration: line-through;margin-left: 5px;margin-right: 5px; color:rgba(94, 93, 79, 0.445)">Rs <%= ((product.price * 100)/(100-product.discount)).toFixed(2) %></span><span style="font-weight: lighter !important; color:#f53edc">(<%= product.discount %>% Off)</span></p>
            <h6 style="color:#2FDD92">Inclusive of All taxes </h6>
        </div>
        <div class="buttons">
          <button type="button" class="btn btn-danger"><i style="margin-right: 0.4rem;" class="fas fa-shopping-cart"></i>Add to Bag</button>
          <button type="button" class="btn btn-outline-success"><i class="far fa-heart"></i> Wishlist</button>

      </div>


    <p class="para">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.</p>
  <h5>Recommended By</h5>
    <div class="option-image">
  <% for(var i=0;i<3 && i<product.recommendedBy.length;i++){%>
      <img src="<%= product.recommendedBy[i].influencerImage %>" alt="influencer" class="influencer-img">
  <%}%>
 <!-- Modal Button -->
  <a type="button" class="View-More" data-bs-toggle="modal" data-bs-target="#exampleModal">
  <h5>...View More</h5>
  </a>
    </div>
            <!-- Modal -->
            <div class="modal" style="background-color: #FEF9EF;"  id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
                <div class="modal-content" >
                  <div class="modal-header" style="margin: 2rem 3rem;">
                      <h3 style="display: inline; color: #212121 !important;" class="modal-title" id="exampleModalLabel">Recommended By</h3>
                      <button type="button" class="btn-close" style="margin-left:auto !important;" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                   
                    
                    <%for(let i=0;i<product.recommendedBy.length;i++){ %>
                      <div style="display: flex; align-items: center; justify-content: center; flex-direction: column;">
                        <div class="influencer">
                          <div class="influencer-intro">
                            <img src="<%= product.recommendedBy[i].influencerImage %>" alt="product" class="influencer-image">
                              <h5 style="color: #191A19;"><%= product.recommendedBy[i].influencerName %></h5>
                          </div>
                          <button type="button" style="background-color: rgb(255, 63, 108); border:0px; border-radius: 4px; font-size: 0.85rem; font-weight: 500; padding: 0.3rem 1.5rem;" class="btn btn-success">Visit!</button>
                        </div>
                      </div> 
                    <%}%>
                  </div>
                  
                </div>
              </div>
            </div>

        
    </div>
</div>
</div>



<%- include("footer.ejs") -%>